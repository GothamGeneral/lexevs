<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>lexevs.loader</groupId>
  <artifactId>umls-loader</artifactId>
  <version>1.0-SNAPSHOT</version>
  
  <parent>
    <groupId>lexevs.loader</groupId>
    <artifactId>loader-framework</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../loader-framework/pom.xml</relativePath>
  </parent>
  
  	<build>
		<plugins>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
				<executions>
					<execution>
						<id>load-data</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<includes>
								<include>util/integration/LoadUmlsForIntegration.java</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<id>test-data</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<includes>
								<include>**/*IT.java</include>
							</includes>
						</configuration>
					</execution>
					
					<execution>
						<id>clean-data</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<includes>
								<include>util/integration/CleanIntegration.java</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
    </plugins>
  </build>
  
  <dependencies>
    
    <dependency>
      <groupId>lexevs.loader</groupId>
  	  <artifactId>abstract-rrf-loader</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
    
    <dependency>
      <groupId>lexevs.loader</groupId>
      <artifactId>abstract-rrf-loader</artifactId>
      <version>1.0-SNAPSHOT</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    
     <dependency>
      <groupId>lexevs.loader</groupId>
      <artifactId>loader-framework-core</artifactId>
      <version>1.0-SNAPSHOT</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    
    
  </dependencies>
  
  
</project>